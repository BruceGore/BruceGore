<h1>Here is Journal Page</h1>



<div class="container">
    <div ng-controller="drop" data-ng-init="init_journal()">
        <div class="row">

            <input ng-click="addJournal('01')" style="width: 100px; height: 27px" class="btn btn-primary ml-2"
                ng-show="jrnNew" value="New Entry">
            <input ng-click="addJournal('02')" style="width: 100px; height: 27px" class="btn btn-primary ml-2"
                ng-show="jrnFind" value="Find Date">
            <input ng-click="addJournal('03')" style="width: 100px; height: 27px" class="btn btn-primary ml-2"
                ng-show="jrnFind" value="Search">

            <div ng-show="jrnFndDate">
                <label for="jrnFndEntry">
                    <h2>Enter date: </h2>
                </label>
                <input type="text" class="ml-3" placeholder="mm/dd/yyyy" ng-model="jrnDate" id="jrnFndEntry" size="8">
            </div>

            <div ng-show="srchJrnTerm" class="ml-3">
                <label for="srchJrnl">
                    <h2>Enter Search Term: </h2>
                </label>
                <input type="text" class="ml-3" ng-model="jrnSearch" id="srchJrnl" size="10">
            </div>




            <input ng-click="addJournal('04')" style="width: 100px; height: 27px" class="btn btn-primary ml-2"
                ng-show="jrnSave" value="Save">
            <input ng-click="addJournal('05')" style="width: 100px; height: 27px" class="btn btn-primary ml-2"
                ng-show="jrnCancl" value="Cancel">

            <input ng-click="addJournal('06')" style="width: 100px; height: 27px" class="btn btn-primary ml-2"
                ng-show="jrnLook" value="Find">

            <input ng-click="addJournal('07')" style="width: 100px; height: 27px" class="btn btn-primary ml-2"
                ng-show="jrnUpdt" value="Save">

            <input ng-click="addJournal('08')" style="width: 100px; height: 27px" class="btn btn-primary ml-2"
                ng-show="srchSave" value="Search">


        </div>

        <div class="mt-3 row" ng-show="jrnEntry">
            <div class="col-md-1">{{txtDate | date}}</div>
            <div class="col-md-1">{{txtDay}}</div>
            <textarea name="jrn" ng-model="txtJournal" rows="5" cols="60"></textarea>
        </div>

        <br /><br /><br />
        <div class="row mt-3" ng-repeat="jr in journal">
            <div class="row">
                <div class="col-md-1">
                    {{jr.date | date}}
                </div>
                <div class="col-md-1">
                    {{jr.day}}
                </div>
                <div class="col-md-8">
                    {{jr.entry}}
                </div>
            </div>            
        </div>

