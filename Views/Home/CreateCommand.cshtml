@model Commandments

@{
    ViewBag.Title = "Create Commandment Entry";
}

<form asp-controller="home" asp-action="CreateCommand" method="post" class="mt-12">


    <div class="form-group row">
        <label asp-for="Number" class="col-md-2 col-form-label">Number</label>
        <div class="col-md-10" >
            <input style="width:300px" asp-for="Number" />
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Text" class="col-md-2 col-form-label">Text</label>
        <div class="col-md-10" >
            <input style="width:300px" asp-for="Text" />
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-md-10">
            <button type="submit" class="btn btn-primary">CreateCommand</button>
        </div>
    </div>
</form>


