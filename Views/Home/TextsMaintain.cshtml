@model texts

@{
    ViewBag.Title = "Create Text Entry";
}

<h1>Create Text Entry</h1>

<div class="container">
    <div ng-controller="drop" data-ng-init="init_texts()">

        <div class="row">
            <div class="col-md-6"></div>
            <button class="btn btn-primary mt-4 ml-4 col-md-3" style="width: 200px" ng-click="makeText()">
                <h3>Create New Text</h3>
            </button>
        </div>

        <div class="row mt-4" ng-repeat="item in texts">
            <h3 style="color:blue; cursor: pointer" ng-click="editText(item.id)" class="col-md-1 mt-3">{{item.id}}</h3>
            <h3 class="col-md-8 mt-3">{{item.text}}</h3>
        </div>

        <br /><br />


        <form asp-controller="home" asp-action="TextsMaintain" method="post" class="mt-12">
            <div ng-show="textDetail">

                <div>
                    <input hidden ng-model="idx" asp-for="Id" />
                </div>

                <div class="form-group row">
                    <label asp-for="Text" class="col-md-2 col-form-label">
                        <h3>Text</h3>
                    </label>
                    <div class="col-md-10">
                        <textarea ng-model="itmTxt" style="width:500px" rows="10" asp-for="Text"></textarea>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-10">
                        <button type="submit" class="btn btn-primary">Create Item</button>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>