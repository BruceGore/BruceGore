@model Downloads

<h1>Create Download Item</h1>


<form asp-controller="home" asp-action="EditDownload" method="post" class="mt-12">


    <div class="form-group row">
        <label style="font-weight: bold" asp-for="Course" class="col-md-2 col-form-label">Course</label>
        <div class="col-md-10">
            <input style="width: 300px" asp-for="Course" />
        </div>
    </div>

    <div class="form-group row">
        <label style="font-weight: bold" asp-for="Unit" class="col-md-2 col-form-label">Unit</label>
        <div class="col-md-10">
            <input style="width: 300px" asp-for="Unit" />
        </div>
    </div>

    <div class="form-group row">
        <label style="font-weight: bold" asp-for="Lesson" class="col-md-2 col-form-label">Lesson</label>
        <div class="col-md-10">
            <input style="width: 300px" asp-for="Lesson" />
        </div>
    </div>

    <div class="form-group row">
        <label style="font-weight: bold" asp-for="Item" class="col-md-2 col-form-label">Item</label>
        <div class="col-md-10">
            <input style="width: 300px" asp-for="Item" />
        </div>
    </div>

    <div class="form-group row">
        <label style="font-weight: bold" asp-for="Desc" class="col-md-2 col-form-label">Description</label>
        <div class="col-md-10">
            <input style="width: 300px" asp-for="Desc" />
        </div>
    </div>

    <div class="form-group row">
        <label style="font-weight: bold" asp-for="Link" class="col-md-2 col-form-label">Link</label>
        <div class="col-md-10">
            <input style="width: 300px" asp-for="Link" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-10">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
</form>