@{
    ViewBag.Title = "Create Audio Lecture Entry";    
}

<form asp-controller="home" asp-action="Create" method="post" class="mt-12">


    <div class="form-group row">
        <label asp-for="ID" class="col-md-2 col-form-label">ID</label>
        <div class="col-md-10">
            <input style="width:100px" asp-for="ID" />
            <span asp-validation-for="ID" class="text-danger"></span>
        </div>
    </div>

